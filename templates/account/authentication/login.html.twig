{% extends 'account/base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}

    <form action="{{ path(app.current_route) }}" method="post" class="form-auth">
        <h1>Login</h1>

        <div class="form-auth__input" >
            {% if error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <div class="form-auth__field">
                <input type="email" placeholder="Email address" name="_email" id="email" value="{{ last_username }}" required />
            </div>

            <div class="form-auth__field">
                <input type="password" placeholder="Password" name="_password" id="password" required />
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        </div>
        <div class="form-auth__cta">
            <p><a class="nav-cta" href="{{ path('app_forgot_password_request') }}">Lost your password ?</a></p>
            <button class="btn">Login to your account</button>
            <p>Don't have an account? <a class="nav-cta" href="{{ path('app_register') }}">Sign Up</a></p>
        </div>
    </form>
{% endblock %}
